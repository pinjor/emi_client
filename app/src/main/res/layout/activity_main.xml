<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp">

    <Button
        android:id="@+id/btnEnableAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enable Device Admin"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btnLock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lock Device (DPM only)"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btnRestrict"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Apply Restrictions"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btnClear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clear Restrictions"
        android:layout_marginTop="16dp" />

    <!-- ðŸ”¹ Test LockScreen -->
    <Button
        android:id="@+id/btnShowLockScreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show LockScreen (Test)"
        android:layout_marginTop="16dp" />

    <!-- ðŸ”¹ Test Unlock -->
    <Button
        android:id="@+id/btnClearLockScreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clear LockScreen (Test)"
        android:layout_marginTop="16dp" />

</LinearLayout>