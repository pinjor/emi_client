<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lock_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a1a1a"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Lock Icon -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ”’"
            android:textSize="72sp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp" />

        <!-- Title -->
        <TextView
            android:id="@+id/tvLockTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Device Locked"
            android:textColor="#FF5252"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <!-- Main Message Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="#2a2a2a"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="âš ï¸ EMI Payment Overdue"
                    android:textColor="#FFA726"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/tvLockMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your EMI payment is overdue. Please contact your seller immediately to restore access to this device."
                    android:textColor="#E0E0E0"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginBottom="16dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#404040"
                    android:layout_marginVertical="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This device will remain locked until your payment is confirmed by the seller."
                    android:textColor="#BDBDBD"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:fontFamily="sans-serif-light" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Seller Contact Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="#2a2a2a"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“ž Contact Seller"
                    android:textColor="#4CAF50"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/tvSellerName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="EMI Mobile Store"
                    android:textColor="#E0E0E0"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvSellerPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+880 1712-345678"
                    android:textColor="#90CAF9"
                    android:textSize="15sp"
                    android:layout_marginBottom="16dp" />

                <!-- Call Button (WhatsApp removed) -->
                <Button
                    android:id="@+id/btnCallSeller"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“± Call Seller"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#4CAF50"
                    android:textSize="16sp"
                    android:padding="16dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Emergency Call Button -->
        <Button
            android:id="@+id/btnEmergency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸš¨ Emergency Call (999)"
            android:textColor="#FFFFFF"
            android:backgroundTint="#F44336"
            android:textSize="16sp"
            android:padding="16dp"
            android:layout_marginBottom="16dp" />

        <!-- Footer Info -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="To unlock this device, you must clear your pending EMI payment with your seller. Once payment is confirmed, the seller will unlock your device remotely."
            android:textColor="#757575"
            android:textSize="12sp"
            android:gravity="center"
            android:lineSpacingExtra="2dp"
            android:fontFamily="sans-serif-light"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="32dp" />

    </LinearLayout>
</ScrollView>
