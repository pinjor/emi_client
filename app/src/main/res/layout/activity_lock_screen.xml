<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lock_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a1a1a"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Lock Icon -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🔒"
            android:textSize="72sp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp" />

        <!-- Title -->
        <TextView
            android:id="@+id/tvLockTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ডিভাইসটি লকড"
            android:textColor="#FF5252"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <!-- Main Message Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="#2a2a2a"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="⚠️ EMI পেমেন্ট জমা হয়নি"
                    android:textColor="#FFA726"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/tvLockMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="আপনার EMI পেমেন্ট জমা হয়নি। অনুগ্রহ করে ডিভাইসটি আনলক করার জন্য আপনার বিক্রেতার সাথে যোগাযোগ করুন।"
                    android:textColor="#E0E0E0"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginBottom="16dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#404040"
                    android:layout_marginVertical="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="এটি নিশ্চিত না হওয়া পর্যন্ত ডিভাইসটি লকড থাকবে।"
                    android:textColor="#BDBDBD"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:fontFamily="sans-serif-light" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Seller Contact Information (Display Only - No Buttons) -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="#2a2a2a"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📞 বিক্রেতার যোগাযোগ তথ্য"
                    android:textColor="#4CAF50"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="এই ডিভাইসটি আনলক করতে আপনার বিক্রেতার সাথে যোগাযোগ করুন:"
                    android:textColor="#BDBDBD"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/tvSellerName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="EMI মোবাইল স্টোর"
                    android:textColor="#E0E0E0"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="8dp" />

                <!-- First Phone Number -->
                <TextView
                    android:id="@+id/tvSellerPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="01814631163"
                    android:textColor="#90CAF9"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="8dp" />

                <!-- OR separator -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="অথবা"
                    android:textColor="#E0E0E0"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_marginBottom="8dp" />

                <!-- Second Phone Number -->
                <TextView
                    android:id="@+id/tvSecondSellerPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="01739439954"
                    android:textColor="#90CAF9"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="এই নম্বরে অন্য ফোন থেকে কল করে আপনার পেমেন্ট সমস্যার সমাধান করুন।"
                    android:textColor="#9E9E9E"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:fontFamily="sans-serif-light" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Footer Info -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="এই ডিভাইসটি আনলক করতে আপনাকে আপনার বিক্রেতার মাধ্যমে আপনার বাকি EMI পেমেন্টটি পরিশোধ করতে হবে। একবার পেমেন্ট নিশ্চিত হলে, বিক্রেতা ডিভাইসটি রিমোটলি আনলক করবে।"
            android:textColor="#757575"
            android:textSize="12sp"
            android:gravity="center"
            android:lineSpacingExtra="2dp"
            android:fontFamily="sans-serif-light"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="32dp" />

    </LinearLayout>
</ScrollView>
